    <script>
        // åˆå§‹åŒ–åœ–æ¨™
        lucide.createIcons();

        // å•Ÿå‹•é é‚è¼¯
        setTimeout(() => {
            const splash = document.getElementById('splash-screen');
            splash.style.opacity = '0';
            setTimeout(() => {
                splash.style.display = 'none';
            }, 700);
            
            // è¼‰å…¥æ—¥è¨˜æ­·å²
            loadDiaryEntries();
        }, 2000);

        // --- å°èˆªé‚è¼¯ ---
        function switchTab(tabId) {
            // éš±è—æ‰€æœ‰å…§å®¹
            document.querySelectorAll('.page-content').forEach(el => {
                el.classList.add('hidden');
                el.classList.remove('fade-in');
            });
            
            // é¡¯ç¤ºç›®æ¨™å…§å®¹
            const target = document.getElementById('tab-' + tabId);
            target.classList.remove('hidden');
            target.classList.add('fade-in');

            // æ›´æ–°æ¨™é¡Œ
            const titles = {
                'home': 'å¿ƒèªç‡ˆå¡”',
                'chat': 'AI é™ªä¼´',
                'diary': 'æƒ…ç·’æ—¥è¨˜',
                'resources': 'è³‡æºæ¨è–¦'
            };
            document.getElementById('header-title').innerText = titles[tabId];

            // æ›´æ–°åº•éƒ¨æŒ‰éˆ•ç‹€æ…‹
            document.querySelectorAll('.nav-item').forEach(btn => {
                if(btn.dataset.target === tabId) {
                    btn.classList.add('text-teal-600');
                    btn.classList.remove('text-gray-400');
                } else {
                    btn.classList.remove('text-teal-600');
                    btn.classList.add('text-gray-400');
                }
            });

            // è§¸ç™¼åœ–æ¨™åˆ·æ–°ï¼ˆå¦‚æœåœ–æ¨™æ˜¯å‹•æ…‹ç”Ÿæˆçš„ï¼‰
            lucide.createIcons();
        }

        // --- èŠå¤©é‚è¼¯ (AI æ¨¡æ“¬) ---
        const chatResponses = [
            "æˆ‘è½åˆ°äº†ã€‚é€™è½èµ·ä¾†ç¢ºå¯¦ä¸å®¹æ˜“ï¼Œæƒ³å¤šèªªèªªå—ï¼Ÿ",
            "ä½ çš„æ„Ÿå—æ˜¯å¾ˆé‡è¦çš„ã€‚æ·±å‘¼å¸ï¼Œæˆ‘åœ¨é€™è£¡é™ªä½ ã€‚",
            "æœ‰æ™‚å€™ï¼Œå…è¨±è‡ªå·±ä¼‘æ¯ä¸€ä¸‹ä¹Ÿæ˜¯ä¸€ç¨®åŠ›é‡ã€‚",
            "è¬è¬ä½ å‘Šè¨´æˆ‘é€™äº›ã€‚ä½ å·²ç¶“åšå¾—å¾ˆå¥½äº†ã€‚",
            "é€™ç¢ºå¯¦è®“äººæ„Ÿåˆ°å£“åŠ›ã€‚ä½ æœ‰è©¦è‘—åšä¸€äº›è®“è‡ªå·±æ”¾é¬†çš„å°äº‹å—ï¼Ÿ"
        ];

        function sendMessage() {
            const input = document.getElementById('chat-input');
            const text = input.value.trim();
            if (!text) return;

            // ç”¨æˆ¶æ¶ˆæ¯
            addMessage(text, 'user');
            input.value = '';

            // æ¨¡æ“¬ AI æ€è€ƒèˆ‡å›è¦†
            setTimeout(() => {
                const randomResponse = chatResponses[Math.floor(Math.random() * chatResponses.length)];
                addMessage(randomResponse, 'ai');
            }, 1000 + Math.random() * 1000);
        }

        function addMessage(text, sender) {
            const history = document.getElementById('chat-history');
            const div = document.createElement('div');
            
            if (sender === 'user') {
                div.className = "flex justify-end mb-4";
                div.innerHTML = `
                    <div class="message-bubble bg-teal-500 text-white rounded-tr-none shadow-md">
                        ${text}
                    </div>
                `;
            } else {
                div.className = "flex gap-3 mb-4";
                div.innerHTML = `
                    <div class="w-8 h-8 rounded-full bg-teal-100 border border-teal-200 flex items-center justify-center flex-shrink-0">
                        <i data-lucide="bot" class="w-5 h-5 text-teal-600"></i>
                    </div>
                    <div class="message-bubble bg-white text-gray-700 shadow-sm border border-gray-100 rounded-tl-none">
                        ${text}
                    </div>
                `;
                // é‡æ–°æ¸²æŸ“æ–°æ’å…¥çš„åœ–æ¨™
                setTimeout(() => lucide.createIcons(), 0);
            }
            
            history.appendChild(div);
            history.scrollTop = history.scrollHeight;
        }

        // --- æ—¥è¨˜é‚è¼¯ ---
        function selectMood(mood, btn) {
            document.getElementById('selected-mood').value = mood;
            
            // é‡ç½®æ¨£å¼
            document.querySelectorAll('.mood-btn span.text-3xl').forEach(el => el.classList.add('filter', 'grayscale'));
            document.querySelectorAll('.mood-btn').forEach(el => el.classList.remove('bg-teal-50', 'ring-2', 'ring-teal-200'));
            
            // æ¿€æ´»æ¨£å¼
            const emoji = btn.querySelector('.text-3xl');
            emoji.classList.remove('filter', 'grayscale');
            btn.classList.add('bg-teal-50', 'ring-2', 'ring-teal-200');
        }

        function saveDiary() {
            const mood = document.getElementById('selected-mood').value;
            const text = document.getElementById('diary-text').value.trim();
            
            if (!mood && !text) {
                alert("è«‹è‡³å°‘é¸æ“‡ä¸€å€‹å¿ƒæƒ…æˆ–å¯«ä¸‹ä¸€äº›æ–‡å­—å“¦ã€‚");
                return;
            }

            const entry = {
                id: Date.now(),
                date: new Date().toLocaleDateString() + ' ' + new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}),
                mood: mood,
                text: text || "ï¼ˆæ²’æœ‰æ–‡å­—è¨˜éŒ„ï¼‰"
            };

            // ç²å–ç¾æœ‰æ—¥è¨˜
            let entries = JSON.parse(localStorage.getItem('hb_diary_entries') || '[]');
            entries.unshift(entry); // åŠ åˆ°æœ€å‰é¢
            localStorage.setItem('hb_diary_entries', JSON.stringify(entries));

            // æ¸…ç©ºè¼¸å…¥
            document.getElementById('diary-text').value = '';
            document.getElementById('selected-mood').value = '';
            document.querySelectorAll('.mood-btn span.text-3xl').forEach(el => el.classList.add('filter', 'grayscale'));
            document.querySelectorAll('.mood-btn').forEach(el => el.classList.remove('bg-teal-50', 'ring-2', 'ring-teal-200'));

            // åˆ·æ–°åˆ—è¡¨
            loadDiaryEntries();
            alert("æ—¥è¨˜å·²ä¿å­˜ï¼");
        }

        function loadDiaryEntries() {
            const list = document.getElementById('diary-list');
            const entries = JSON.parse(localStorage.getItem('hb_diary_entries') || '[]');
            
            if (entries.length === 0) {
                list.innerHTML = '<div class="text-center text-gray-300 text-sm py-4">æš«ç„¡è¨˜éŒ„ï¼Œè©¦è‘—å¯«ä¸‹ç¬¬ä¸€ç¯‡å§</div>';
                return;
            }

            const moodEmojis = {
                'sad': 'ğŸ˜¢', 'anxious': 'ğŸ˜°', 'neutral': 'ğŸ˜', 'happy': 'ğŸ˜Š', 'great': 'ğŸ¤©'
            };

            list.innerHTML = entries.map(entry => `
                <div class="bg-white p-4 rounded-xl border border-gray-100 shadow-sm">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-xs text-gray-400 font-mono">${entry.date}</span>
                        <span class="text-xl">${moodEmojis[entry.mood] || 'ğŸ“'}</span>
                    </div>
                    <p class="text-gray-700 text-sm whitespace-pre-wrap">${entry.text}</p>
                </div>
            `).join('');
        }

        // è‡ªå‹•èª¿æ•´ textarea é«˜åº¦
        const chatInput = document.getElementById('chat-input');
        chatInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

    </script>
